<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NoticeController">
   <center>
      <VBox alignment="CENTER" style="-fx-border-color: grey;" styleClass="lable-button" stylesheets="@../css/home.css" BorderPane.alignment="CENTER">
         <children>
            <VBox style="-fx-border-color: grey; -fx-background-color: white;">
               <children>
                  <Label fx:id="bdNotice" prefHeight="40.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Notice">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="bdNoticeTitle" prefHeight="40.0" style="-fx-font-size: 18px;" text="Pharmacy pays salary twice a month." />
                  <Label fx:id="bdNoticeSup1" prefHeight="40.0" style="-fx-font-size: 18px;" text="- The first time on 5th." />
                  <Label fx:id="bdNoticeSup2" prefHeight="40.0" style="-fx-font-size: 18px;" text="- The second time on 10th." />
                  <Label fx:id="bdWorkTime" prefHeight="40.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Work time">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="bdWorkTimeSup1" prefHeight="40.0" style="-fx-font-size: 18px;" text="- Shift 1: from 7am to 11am." />
                  <Label fx:id="bdWorkTimeSup2" prefHeight="40.0" style="-fx-font-size: 18px;" text="- Shift 2: from 11am to 3pm." />
                  <Label fx:id="bdWorkTimeSup3" prefHeight="40.0" style="-fx-font-size: 18px;" text="- Shift 3: from 3pm to 7pm." />
                  <Label fx:id="bdWorkTimeSup4" prefHeight="40.0" style="-fx-font-size: 18px;" text="- Shift 4: from 7pm to 11pm." />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
