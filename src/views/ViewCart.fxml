<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewCartController">
   <top>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="68.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="40.0" style="-fx-font-weight: bold;" text="Shopping Cart">
               <font>
                  <Font size="40.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <BorderPane prefHeight="500.0" prefWidth="819.0" BorderPane.alignment="CENTER">
         <right>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label prefHeight="30.0" text="Total:">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="totalLabel" prefHeight="30.0" style="-fx-font-weight: bold;" text="\$20000.0">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="checkOutLabel" maxWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#checkOutClicked" prefHeight="30.0" prefWidth="210.0" style="-fx-background-color: gray; -fx-text-fill: white;" text="Checkout">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <VBox fx:id="editCartVBox" alignment="CENTER">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                                 <children>
                                    <Label prefHeight="35.0" style="-fx-font-weight: bold;" text="Product ID:">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                    <Label fx:id="setProId" prefHeight="35.0" text="ID">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                                 <children>
                                    <Label prefHeight="35.0" style="-fx-font-weight: bold;" text="Product Name:">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                    <Label fx:id="setProName" prefHeight="35.0" text="name">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                                 <children>
                                    <Label prefHeight="35.0" style="-fx-font-weight: bold;" text="Quantity:">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                    <Spinner fx:id="setQuantity" editable="true" prefHeight="30.0" prefWidth="86.0">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Spinner>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                                 <children>
                                    <Label prefHeight="35.0" style="-fx-font-weight: bold;" text="Unit:">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                    <Label fx:id="setUnit" prefHeight="35.0" text="unit">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                                 <children>
                                    <Label prefHeight="35.0" style="-fx-font-weight: bold;" text="Price:">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                    <Label fx:id="setPrice" prefHeight="35.0" text="price">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                                 <children>
                                    <Label prefHeight="35.0" style="-fx-font-weight: bold;" text="Amount:">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Label>
                                    <Label fx:id="setAmount" prefHeight="35.0" text="amount">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#removeAction" prefHeight="35.0" style="-fx-background-color: gray; -fx-text-fill: white;" text="Remove">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#updateAction" prefHeight="35.0" style="-fx-background-color: gray; -fx-text-fill: white;" text="Update">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </right>
         <top>
            <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="36.0" prefWidth="900.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="numberProductLabel" prefHeight="30.0" text="2 products in Cart">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </top>
         <center>
            <TableView fx:id="cartTableView" onMouseClicked="#tableViewCartClicked" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="productId" prefWidth="75.0" text="Product ID" />
                <TableColumn fx:id="productName" prefWidth="75.0" text="Product Name" />
                  <TableColumn fx:id="quantity" prefWidth="75.0" text="Quantity" />
                  <TableColumn fx:id="unit" prefWidth="75.0" text="Unit" />
                  <TableColumn fx:id="price" prefWidth="75.0" text="Price" />
                  <TableColumn fx:id="amount" prefWidth="75.0" text="Amount" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </BorderPane>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
