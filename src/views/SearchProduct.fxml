<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SearchProductController">
   <top>
      <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="69.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="39.0" prefWidth="452.0" style="-fx-background-color: gray; -fx-background-radius: 10;">
               <HBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </HBox.margin>
               <children>
                  <TextField id="searchMedicine" onKeyReleased="#searchReleasedTextField" prefHeight="35.0" prefWidth="409.0" promptText="Enter medicine name" style="-fx-background-color: gray;" />
                  <Label prefHeight="35.0" prefWidth="35.0">
                     <graphic>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/edit-find-symbolic.symbolic.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="searchTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="productTypeId" prefWidth="89.0" text="Product Type ID" />
          <TableColumn fx:id="productId" prefWidth="61.0" text="Product ID" />
            <TableColumn fx:id="productName" prefWidth="61.0" text="Product Name" />
            <TableColumn fx:id="unit" prefWidth="61.0" text="Unit" />
            <TableColumn fx:id="quatity" prefWidth="61.0" text="Quantity" />
            <TableColumn fx:id="mfgDate" prefWidth="61.0" text="MFG Date" />
            <TableColumn fx:id="expDate" prefWidth="61.0" text="EXP Date" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
